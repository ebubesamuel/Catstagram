@model Catstagram.Models.CatPost

<h1> Delete Post</h1>

<p>Are you sure you want to delete this post?</p>

<dl class="row">
    <dt class="col-sm-2">Id</dt>
    <dd class="col-sm-8">@Model.Id</dd>

    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-8">@Model.AuthorName</dd>

    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-8">@Model.Email</dd>

    <dt class="col-sm-2">Comment</dt>
    <dd class="col-sm-8">@Model.Comment</dd>

    <dt class="col-sm-2">Date Created</dt>
    <dd class="col-sm-8">@Model.Date.ToShortDateString()</dd>
</dl>

<div>
    <button type="submit" class="btn btn-danger">Confirm</button>
</div>
